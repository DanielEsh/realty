generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RealtyObjectType {
  FLAT
  APARTMENT
}

model Property {
  id Int @id @default(autoincrement())
  name String
  description String?
  realtyObjects RealtyObject[]
}

model Furnish {
  id Int @id @default(autoincrement())
  name String
  description String?
  realtyObjects RealtyObject[]
}

model Benefit {
  id Int @id @default(autoincrement())
  name String
  description String?
  realtyObjects RealtyObjectBenefit[]
}

model RealtyObjectBenefit {
  realtyObjectId Int
  benefitId Int
  realtyObject RealtyObject @relation(fields: [realtyObjectId], references: [id])
  benefit Benefit @relation(fields: [benefitId], references: [id])

  @@id([realtyObjectId, benefitId])
}

model RealtyObject {
  id          Int      @id @default(autoincrement())
  number      String
  type        RealtyObjectType @default(FLAT)
  property    Property @relation(fields: [propertyId], references: [id])
  propertyId Int
  furnish    Furnish? @relation(fields: [furnishId], references: [id])
  furnishId Int?
  benefits RealtyObjectBenefit[]
  rooms       Int
  floor       Int
  total_floors Int
  area        Float
  plan        String
  originalPrice Int
  price         Int
}
