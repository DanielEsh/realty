generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RealtyObjectType {
  FLAT
  APARTMENT
}

model Property {
  id Int @id @default(autoincrement())
  name String
  description String?
  realtyObjects RealtyObject[]
}

model RealtyObject {
  id          Int      @id @default(autoincrement())
  number      String
  type        RealtyObjectType @default(FLAT)
  property    Property @relation(fields: [propertyId], references: [id])
  propertyId Int
  rooms       Int
  floor       Int
  total_floors Int
  area        Float
  plan        String
  originalPrice Int
  price         Int
}
